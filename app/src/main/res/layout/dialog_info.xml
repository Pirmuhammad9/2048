<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:elevation="16dp"
        android:src="@drawable/ic_inf"
        app:layout_constraintBottom_toTopOf="@id/lin0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/lin0" />

    <TextView
        android:id="@+id/lin0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_score"
        android:lineHeight="20dp"
        android:justificationMode="inter_word"
        android:paddingHorizontal="16dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:text="@string/the_game_s_objective_is_to_slide_numbered_tiles_on_a_grid_to_combine_them_to_create_a_tile_with_the_number_2048_however_one_can_continue_to_play_the_game_after_reaching_the_goal_creating_tiles_with_larger_numbers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ok"
        android:text="OK"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/lin0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        android:background="@drawable/bg_btn_selector"
        app:layout_constraintBottom_toBottomOf="@id/lin0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>